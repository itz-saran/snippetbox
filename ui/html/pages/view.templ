{{define "title"}}Snippet #{{.ID}}{{ end }}

{{define "main"}}
<div class="snippet">
	<div class="metadata">
		<strong>{{.Title}}</strong>
		<span>#{{.ID}}</span>
	</div>
	<pre><code>{{.ContentHTML}}</code></pre>
	<div class="metadata">
		<time>Created: {{.CreatedAt}}</time>
		<time>Expires: {{.ExpiresAt}}</time>
	</div>
</div>
{{ end }}
